<h1>
  Actor #<%= @actor.id %>  details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
   <%=  @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
   <%=  @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%=  @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @actor.image.to_s %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
   <%= @actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody><tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

<% @characters.each do |a_character| %>
    <tr>
      <td>
        <%= @character_hash[a_character.id][:movie] %>
      </td>

      <td>
        <%= @character_hash[a_character.id][:year] %>
      </td>

      <td>
        <%= @character_hash[a_character.id][:director] %>
      </td>

      <td>
        <%= a_character.name %>
      </td>

      <td>
        <a href= <%= "/movies/" + a_character.movie_id.to_s %> >
          Show details
        </a>
      </td>
    </tr>
    <%end%>
</tbody></table>
